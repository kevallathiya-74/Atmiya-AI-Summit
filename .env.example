# GayanSetu AI - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# FRONTEND-ONLY DEPLOYMENT
# No backend server required
# All features use client-side logic with mock data
# ============================================

# App Configuration
NEXT_PUBLIC_APP_NAME="GayanSetu AI"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === OPTIONAL: Future Backend Integration ===
# Uncomment and configure when adding a backend

# API Configuration
# NEXT_PUBLIC_API_URL=https://your-backend-api.com
# NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication (if using external auth service)
# NEXT_PUBLIC_AUTH_URL=https://your-auth-service.com
# NEXTAUTH_SECRET=your-secret-key-here

# Database (if needed)
# DATABASE_URL=your-database-connection-string

# AI/ML Services (if integrating external AI)
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Feature Flags
NEXT_PUBLIC_ENABLE_TEACHER_DASHBOARD=true
NEXT_PUBLIC_ENABLE_STUDENT_DASHBOARD=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Environment
NODE_ENV=production
